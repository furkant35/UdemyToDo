
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}



<div class="row mt-3">

    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Yazdığınız Rapor Sayısı</h4>
                @if (@ViewBag.RaporSayisi > 0)
                {
                    <p class="card-text display-4 mt-3">@ViewBag.RaporSayisi</p>
                }
                else
                {
                    <p class="card-text lead">Herhangi bir rapor yazmamışsınız</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Tamamladığınız Görev Sayısı</h4>
                @if (ViewBag.TamamlananGorevSayisi > 0)
                {
                    <p class="card-text display-4 mt-3">@ViewBag.TamamlananGorevSayisi</p>
                    <p class="">
                        <a asp-action="Index" asp-controller="Gorev" asp-area="Member" class="btn btn-light btn-sm">İncele<i class="fas fa-chevron-circle-left ml-2"></i></a>
                    </p>
                }
                else
                {
                    <p class="card-text lead">Herhangi bir görev tamamlamamışsınız</p>
                }
            </div>
        </div>
    </div>

</div>


<div class="row mt-3">

    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Okunmamış Bildirim Sayısı</h4>
                @if (ViewBag.OkunmamisBildirimSayisi > 0)
                {
                    <p class="card-text display-4 mt-3">@ViewBag.OkunmamisBildirimSayisi</p>
                    <p class="">
                        <a asp-action="Index" asp-controller="Bildirim" asp-area="Member" class="btn btn-light btn-sm">İncele<i class="fas fa-chevron-circle-left ml-2"></i></a>
                    </p>
                }
                else
                {
                    <p class="card-text lead">Okunmamış bir bildiriminiz yok</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3">
            <div class="card-body">
                <h4 class="card-title">Tamamlanması Gereken Görev Sayısı</h4>
                @if (@ViewBag.TamamlanmasiGerekenGorevSayisi > 0)
                {
                    <p class="card-text display-4 mt-3">@ViewBag.TamamlanmasiGerekenGorevSayisi</p>
                    <p class="">
                        <a asp-action="Index" asp-controller="IsEmri" asp-area="Member" class="btn btn-light btn-sm">İncele<i class="fas fa-chevron-circle-left ml-2"></i></a>
                    </p>
                }
                else
                {
                    <p class="card-text lead">Herhangi bir tamamlanması gereken raporunuz yok</p>
                }
            </div>
        </div>
    </div>


</div>

